<%= form_with(model: user, url: confirm_new_or_edit, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "#{t('view.error')}") %> <%= t('view.save_errors') %></h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label t('view.name') %>
  <%= form.text_field :name %>

  <%= form.label t('view.email') %>
  <%= form.email_field :email %>

  <%= form.label t('admin.admin_confirm') %>
  <%= form.select :admin, [["無", false], ["有", "true"]] %>

  <%= form.label t('view.password') %>
  <%= form.password_field :password %>

  <%= form.label t('view.password_confirmation') %>
  <%= form.password_field :password_confirmation %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
