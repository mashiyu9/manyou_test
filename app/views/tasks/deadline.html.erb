<p id="notice"><%= notice %></p>

<h1><%= t('view.deadlines') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class= "task_list_parts">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.importance %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline %></td>
        <td><%= link_to t('view.show'), task %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.delete'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.index'), tasks_path %>
<%= link_to t('view.deadline_sort'), deadline_tasks_path %>
