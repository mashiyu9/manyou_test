
<div class="task_parts">
  <p>
    <strong><%= t('view.title') %>:</strong>
    <%= @task.title%>
  </p>
</div>
<div class="task_parts">
  <p>
    <strong><%= t('view.content') %>:</strong>
    <%= @task.content %>
  </p>
</div>
<div class="task_parts">
  <p>
    <strong><%= t('view.importance') %>:</strong>
    <%= @task.importance %>
  </p>
</div>

<div class="task_parts">
  <p>
    <strong><%= t('view.status') %>:</strong>
    <%= @task.status %>
  </p>
</div>
<div class="task_parts">
  <p>
    <strong><%= t('view.deadline') %>:</strong>
    <%= @task.deadline.strftime("%Y年%m月%d日") %>
  </p>
</div>
<h4>タグ一覧</h4>
  <% @task.labels.each do |label| %>
  <div class="task_parts">
    <p><%= label.series %></p>
  </div>
  <% end %>


<%= link_to t('view.edit'), edit_task_path(@task) %> |
<%= link_to t('view.index'), tasks_path %> 

