<p id="notice"><%= notice %></p>

<h1><%= t('view.tasks') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class= "task_list_parts">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.importance %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline %></td>
        <td><%= link_to t('view.show'), task %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.delete'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>検索</h2>
<%= form_tag(tasks_path, method: :get) do %>
  <%= text_field_tag :sort_title %>
  <%= select_tag :sort_status, options_for_select(["作業中","完了","未着手"]) %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<%= form_tag(tasks_path, method: :get) do %>
  <%= select :status, :name,Task.importances.keys.to_a %>
  <%= submit_tag 'Search', name: nil %>

<% end %>



<br>

<%= link_to t('view.new_task'), new_task_path %>
<%= link_to t('view.return_sort'), tasks_path(sort_expired: "") %>
<%= link_to t('view.deadline_sort'), tasks_path(sort_expired: "true") %>
<%= link_to t('view.status_sort'), tasks_path(sort_importance: "true") %>
